<section>
  {{#with reviewList}}
    {{#each this}}
      <div class='card mb-3'>
        <div class='card-body'>
          <div class='card'>
            <div class='card-header'>
              <div class='row'>
                <div class='col-10'>
                  <h5 class='card-title'>
                    {{title.userName}}
                  </h5>
                  <p class='card-text'>
                    {{title.caption}}
                  </p>
                </div>
                <div
                  class='col-2 d-flex align-items-center ps-4 pe-0'
                >
                  {{title.date}}
                </div>
              </div>
            </div>
            <div class='card-body'>
              {{#with reviewBody}}
                <p class='card-title'>
                  {{seller.title}}:
                  {{seller.value}}
                </p>
                <p class='card-text'>
                  {{rating.title}}:
                  {{rating.value}}
                </p>
                {{#each text}}
                  <p class='card-text'>
                    {{this}}
                  </p>
                {{/each}}
                {{#with advantages}}
                  <p class='card-text mb-0'>
                    <b>{{title}}</b>:
                  </p>
                  <p>{{text}}</p>
                {{/with}}
                {{#with disadvantages}}
                  <p class='card-text mb-0'>
                    <b>{{title}}</b>:
                  </p>
                  <p>{{text}}</p>
                {{/with}}
                <div class='row'>
                  {{#each images}}
                    <div class='col-2 w-25'>
                      <img
                        src='{{this}}'
                        alt=''
                        class='card-img-top rounded-1'
                      />
                    </div>
                  {{/each}}
                </div>
              {{/with}}
            </div>
          </div>
          <div class='row'>
            {{#with reviewBody}}
              <div class='col-1'></div>
              <div class='col-11'>
                {{#each comments}}
                  <div class='card mt-4'>
                    <div class='card-body'>
                      <div class='row'>
                        <div class='col-10'>
                          <h6 class='card-title'>
                            {{userName}}
                          </h6>
                        </div>
                        <div
                          class='col-2 d-flex align-items-center'
                        >
                          {{date}}
                        </div>
                        <div class='col-12'>
                          <p class='card-text'>
                            {{text}}
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                {{/each}}
              </div>
            {{/with}}
          </div>
        </div>
      </div>
    {{/each}}
  {{/with}}
</section>