{{> shopheader}}

<section>
  <h1 class="mb-5">{{header}}</h1>
  <div class="row g-2">
    {{!-- CONTACTS DATA --}}
    <div class="col-8">
      {{#with contacts_data}}
        <h2>{{title}}</h2>
        {{!-- BUTTONS --}}
        <div>
          {{#each buttons}}
            {{#if isPrimary}}
              <button class="btn btn-warning me-2">{{text}}</button>
            {{/if}}
            {{#if isOutline}}
              <button class="btn btn-outline-warning">{{text}}</button>
            {{/if}}
          {{/each}}
        </div>
        {{!-- FORM --}}
        <div class="mb-3">
          {{#with form.input}}
            <div class="row">
              <div class="col-6 mt-3">

                <label class="form-label"> {{surname.label}}
                </label>

                <input type="text" class="form-control" placeholder="{{surname.placeholder}}">

                <div class="form-text">
                  {{surname.caption}}
                </div>

              </div>
              <div class="col-6 mt-3">

                <label class="form-label"> {{name.label}}
                </label>

                <input type="text" class="form-control" placeholder="{{name.placeholder}}">

                <div class="form-text">
                  {{name.caption}}
                </div>

              </div>
              <div class="col-6 mt-3">

                <label class="form-label"> {{phone.label}}
                </label>

                <input type="text" class="form-control" placeholder="{{phone.placeholder}}">

                <div class="form-text">
                  {{phone.caption}}
                </div>

              </div>
              <div class="col-6 mt-3">

                <label class="form-label"> {{email.label}}
                </label>

                <input type="text" class="form-control" placeholder="{{email.placeholder}}">

                <div class="form-text">
                  {{email.caption}}
                </div>

              </div>
            </div>
          {{/with}}
        </div>
        <hr>
        {{!-- FORM:SWITCH --}}
        <div class="col-12 m-2">
          {{#with form}}
            {{#each switch}}
              <div class='form-check form-switch m-3'>
                <label class='form-check-label fw-bold'>{{text}}</label>
                <input
                  name='number'
                  type='checkbox'
                  class='form-check-input' />
              </div>
            {{/each}}
          {{/with}}
        </div>
        <hr>
      {{/with}}
      {{!-- DELIVERY --}}
      <div class="col-12">
        {{#with delivery}}
          <h2 class="mb-3">{{title}}</h2>
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    {{#each select}}
                      <div class="col-6">
                        <label class="form-label">{{label}}
                        </label>
                        <select name="city" class="form-select" aria-placeholder="{{placeholder}}">
                          <option value="" disabled selected hidden>{{placeholder}}</option>
                          {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                          {{/each}}
                        </select>
                      </div>
                    {{/each}}
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 mt-3 px-0">
              <div class="row">
                {{#each delivery_type}}
                  <div class="col-1 ms-3 me-0 ps-5 pe-0">
                    <input type='radio' class='form-check-input' />
                  </div>
                  <div class="col-4 ps-0">
                    <label class='form-check-label'>{{type}}</label>
                  </div>
                  <div class="col-6 px-0 text-end">
                    <label class='form-check-label'>{{value}}</label>
                  </div>
                {{/each}}
              </div>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-12">
              {{#each payment}}
                <input type="radio" class="form-check-input">
                <label class="form-check-label">{{type}}</label>
                {{#if description}}
                  <div class="form-text mb-2">{{description}}</div>
                {{/if}}
              {{/each}}
            </div>
          </div>
          <hr>
          <div class="mb-3">
            {{#with contact}}
              <h2>{{title}}</h2>
              <div class="row">
                <div class="col-6 mt-3">

                  <label class="form-label"> {{surname.label}}
                  </label>

                  <input type="text" class="form-control" placeholder="{{surname.placeholder}}">

                  <div class="form-text">
                    {{surname.caption}}
                  </div>

                </div>
                <div class="col-6 mt-3">

                  <label class="form-label"> {{name.label}}
                  </label>

                  <input type="text" class="form-control" placeholder="{{name.placeholder}}">

                  <div class="form-text">
                    {{name.caption}}
                  </div>

                </div>
                <div class="col-6 mt-3">

                  <label class="form-label"> {{phone.label}}
                  </label>

                  <input type="text" class="form-control" placeholder="{{phone.placeholder}}">

                  <div class="form-text">
                    {{phone.caption}}
                  </div>

                </div>
                <div class="col-6 mt-3">

                  <label class="form-label"> {{email.label}}
                  </label>

                  <input type="text" class="form-control" placeholder="{{email.placeholder}}">

                  <div class="form-text">
                    {{email.caption}}
                  </div>

                </div>
              </div>
            {{/with}}
          </div>
          <hr>
          <div class="row">
            <div class="col-12 mb-3">
              {{#with comment}}
                <label class="form-label fw-bold"> {{label}}
                </label>

                <input type="text" class="form-control" placeholder="{{placeholder}}">
              {{/with}}
            </div>
          </div>
          <hr>
        {{/with}}
      </div>

      {{!-- COUPON --}}
      <div class="col-12">
        {{#with coupon}}
          <h2 class="mb-3">{{title}}</h2>
          <div class="row">
            {{#with select}}
              <div class="col-12 mb-3">
                {{#with available_coupon}}
                  <label class="form-label">{{label}}</label>
                  <select name="coupon" class="form-select">
                    <option value="" disabled selected hidden>{{placeholder}}</option>
                    {{#each options}}
                      <option value="{{value}}">{{text}}</option>
                    {{/each}}
                  </select>
                {{/with}}
              </div>
              <div class="col-12 mb-3">
                {{#with friend_coupon}}
                  <label class="form-label">{{label}}</label>
                  <select name="coupon" class="form-select">
                    <option value="" disabled selected hidden>{{placeholder}}</option>
                    {{#each options}}
                      <option value="{{value}}">{{text}}</option>
                    {{/each}}
                  </select>
                {{/with}}
              </div>
            {{/with}}
            {{#with add}}
              <div class='col-12 mb-3'>
                {{#with friend}}
                  <label class='form-label'>{{label}}</label>
                  <input type='text' class='form-control' placeholder="{{placeholder}}" />
                  <div class='form-text'>{{caption}}</div>
                {{/with}}
              </div>
              <div class='col-12 mb-3'>
                {{#with colleague}}
                  <label class='form-label'>{{label}}</label>
                  <input type='text' class='form-control' placeholder="{{placeholder}}" />
                  <div class='form-text'>{{caption}}</div>
                {{/with}}
              </div>
            {{/with}}
          </div>
        {{/with}}
      </div>
      <hr>

      {{!-- QUIZ --}}
      <div class="col-12">
        {{#with quiz}}
          <h2 class="mb-3">{{title}}</h2>
          <div class="row">
            <div class="col-12 mb-3">
              {{#with preference}}
                <label class="form-label">{{title}}</label>
                {{#each options}}
                  <div class='form-check'>
                    <label class='form-check-label'>{{this}}</label>
                    <input
                      name='options'
                      type='radio'
                      class='form-check-input' />
                  </div>
                {{/each}}
              {{/with}}
            </div>
            <div class='col-12 mb-3'>
              <label class='form-label'>{{your_experience.label}}</label>
              <input type='experience' class='form-control' />
            </div>
            <div class="col-12 mb-4">
              {{#with purchase_frequency}}
                <label class="form-label">{{label}}</label>
                <select name="coupon" class="form-select">
                  <option value="" disabled selected hidden>{{placeholder}}</option>
                  {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                  {{/each}}
                </select>
              {{/with}}
            </div>
            <div class="col-12 mb-3">
              {{#with factors}}
                <label class='form-label'>{{title}}</label>
                {{#each options}}
                  <div class='form-check'>
                    <label class='form-check-label'>{{this}}</label>
                    <input
                      name='options'
                      type='checkbox'
                      class='form-check-input' />
                  </div>
                {{/each}}
              {{/with}}
            </div>
          </div>
        {{/with}}
      </div>

    </div>

{{!-- ACTION BLOCK AND TOTAL --}}
    <div class="col-4">
      {{!-- ACTION BLOCK --}}
      <div class="card mt-5">
        <div class="card-body">
          {{#each action_block}}
            {{#if isPrimary}}
              <button class="btn btn-primary mb-2">{{text}}</button><br>
            {{/if}}
            {{#if isDanger}}
              <button class="btn btn-danger mb-2">{{text}}</button> <br>
            {{/if}}
            {{#if isInfo}}
              <button class="btn btn-info">{{text}}</button> <br>
            {{/if}}
          {{/each}}
        </div>
      </div>
      {{!-- TOTAL --}}
      <div class="card mt-3">
        <div class="card-body">
          {{#with total}}
            <div class="card-title display-6 fw-semibold">
              {{title}}
            </div>
            <div class="list-group-flush">
              {{#each item_list}}
                <div class="list-group-item">
                  {{name}}: {{price}}
                </div>
              {{/each}}
            </div>
            <hr>
            <div class="list-group-flush">
              {{#each additional_info}}
                <div class="list-group-item">
                  {{text}}: {{value}}
                </div>
              {{/each}}
            </div>
            <hr>
            <div>
              {{total_price.text}}: {{total_price.value}}
            </div>
            <hr>
            {{#each button}}
              {{#if isPrimary}}
                <button class="btn btn-primary me-2 mb-2">{{text}}</button> <br>
              {{/if}}
              {{#if isOutline}}
                <button class="btn btn-outline-primary">{{text}}</button>
              {{/if}}
            {{/each}}
          {{/with}}
        </div>
      </div>
    </div>
  </div>
</section>

<hr>

{{> shopfooter}}