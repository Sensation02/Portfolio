<div>
  <main>
    {{#with main}}
      <section>
        {{> title data="All skills" big=true}}
        <ul>
          {{#each skills}}
            <li>
              {{name}}
              {{#if point includeZero=true}} - {{point}} {{/if}}
              {{#if isTop}} - TOP {{/if}}
              {{#unless point includeZero=true}} - Не вивчаємо {{/unless}}
              {{#unless point}}
                {{#if point includeZero=true}}
                  - Зараз вивчаємо
                {{/if}}
              {{/unless}}
            </li>
          {{/each}}
        </ul>
        {{> title data="Hobbies"}}
        <ol>
          {{#each hobbies}}
            <li>
              {{name}} 
              {{#if isMain}} (favorite) {{/if}}
            </li>
          {{/each}}
        </ol>
      </section>
    {{/with}}
  </main>
</div>